<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnLizard"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lizard"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnPaper"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/paper"
        android:layout_below="@id/btnLizard"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnRock"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rock"
        android:layout_below="@id/btnPaper"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnPaper1"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/paper"
        android:layout_below="@id/btnRock"
        android:padding="0dp"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnSpock"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/spock"
        android:layout_below="@id/btnPaper1"
        android:padding="0dp"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnRock1"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rock"
        android:layout_toLeftOf="@id/btnPaper"
        android:layout_alignBottom="@id/btnPaper"
        android:scaleType="centerCrop"
        />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnScissors"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/scissors"
        android:layout_toRightOf="@id/btnPaper"
        android:layout_alignBottom="@id/btnPaper"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnLizard1"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/lizard"
        android:layout_toLeftOf="@id/btnRock"
        android:layout_alignBottom="@id/btnRock"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/btnRock2"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/lizard"
        android:layout_toRightOf="@id/btnPaper1"
        android:layout_alignBottom="@id/btnPaper1"
        android:scaleType="centerCrop"
        />


